<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout01"
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent" android:orientation="horizontal"
 android:background="@drawable/recipients_editor_bg"
 android:gravity="center_vertical" android:layout_height="wrap_content">
 <TextView
    android:id="@+id/people_number_or_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="17dip"
    android:layout_alignParentLeft="true"
    />
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="61dip"
    android:id="@+id/call_people"
    android:background="@drawable/call_people_bg"
    />
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:background="@drawable/people_info_bg"
    android:id="@+id/people_info"
    android:layout_marginRight="17dip"
    />

</RelativeLayout>
