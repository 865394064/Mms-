<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/recipients_editor_bg"
    android:orientation="horizontal">
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="@string/recipicents_label"
    android:paddingLeft="15dip"
    android:paddingTop="12dip"
    android:textSize="15dip"
    android:textColor="#c9c9c9"
    />
    <com.android.mms.ui.RecipientsEditor
        android:paddingLeft="13dip"
        android:paddingTop="4dip"
        android:id="@+id/recipients_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:textColor="#000000"
    />

    <ImageButton android:id="@+id/recipients_picker"
        android:src="@drawable/add_contacts_bg"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingRight="13dip"
        android:paddingLeft="13dip" 
        android:paddingTop="11dip"
        android:paddingBottom="8dip"
    />

</LinearLayout>
