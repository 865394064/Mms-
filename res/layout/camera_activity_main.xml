<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <SurfaceView 
        android:id="@+id/surfaceView"
        android:layout_width="165dip"
        android:layout_height="225dip"
        />
    
    <RelativeLayout 
        android:id="@+id/buttonLayout"
        android:layout_width="165dip"
        android:layout_height="225dip"> 
        
        <Button 
            android:id="@+id/takepicture"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:background="@drawable/mms_camera_selector"
            android:onClick="clickCamera"/>
        
        <Button 
            android:id="@+id/scalePic"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/mms_camera_face_selector"
            android:onClick="clickFace"/>
        
    </RelativeLayout>

</FrameLayout>
